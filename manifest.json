{
  "manifest_version": 3,
  "name": "VirusTotal Scanner",
  "version": "1.0",
  "description": "Scans URLs with VirusTotal API",
  "permissions": ["activeTab", "webRequest", "webRequestBlocking", "storage", "unlimitedStorage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ]
}
