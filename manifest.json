{
  "manifest_version": 3,
  "name": "ScamAlert",
  "version": "1.0",
  "description": "Scans URLs using VirusTotal API",
  "permissions": ["activeTab", "webRequest", "webRequestBlocking", "storage", "unlimitedStorage", "scripting", "notifications"],
  "background": {
    "scripts": ["background/background.js"],
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "logo.png",
      "96": "logo.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["welcome.html", "permissions.html", "api-key.html", "all-set.html", "welcome.js", "permissions.js", "api-key.js", "all-set.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ]
}
