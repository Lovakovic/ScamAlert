{
  "manifest_version": 3,
  "name": "ScamAlert",
  "version": "1.0",
  "description": "Scans URLs using VirusTotal API",
  "default_locale": "en",
  "permissions": ["activeTab", "webRequest", "storage", "unlimitedStorage", "alarms"],
  "background": {
    "scripts": ["background/background.js"],
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/logo.png",
      "96": "icons/logo.png"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
