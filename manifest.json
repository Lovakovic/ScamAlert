{
  "manifest_version": 3,
  "name": "ScamAlert",
  "version": "1.0",
  "description": "Scans URLs using VirusTotal API",
  "default_locale": "hr",
  "permissions": ["activeTab", "webRequest", "webRequestBlocking", "storage", "unlimitedStorage", "scripting", "notifications", "alarms"],
  "background": {
    "scripts": ["background/background.js"],
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "logo.png",
      "96": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ]
}
